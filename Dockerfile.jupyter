FROM python:3.11-slim

WORKDIR /workspace

RUN pip install --no-cache-dir \
    jupyterlab==4.0.9 \
    pandas==2.1.3 \
    numpy==1.26.2 \
    matplotlib==3.8.2 \
    seaborn==0.13.0 \
    psycopg2-binary==2.9.9 \
    sqlalchemy==1.4.50

EXPOSE 8888

CMD ["jupyter", "lab", "--ip=0.0.0.0", "--port=8888", "--no-browser", "--allow-root", "--NotebookApp.token=", "--NotebookApp.password="]
